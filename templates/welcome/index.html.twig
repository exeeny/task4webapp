{% extends 'base.html.twig' %}

{% block title %}Welcome!{% endblock %}

{% block body %}
<div class="min-h-screen flex items-center justify-center">
    <div class="bg-white rounded-2xl shadow-lg p-10 max-w-md w-full text-center dark:bg-gray-800">
        <h1 class="text-3xl font-extrabold mb-4">Welcome to <span class="text-indigo-600">Task4WebApp!</span></h1>
        <p class=" mb-6">
            A simple user management tool. {{app.user ? 'You are already logged in!' : 'Please register or log in to continue.'}}
        </p>
        <div class="flex flex-col sm:flex-row justify-center gap-4 mt-4">
            {% if app.user %}
            <a href="{{ path('app_home') }}" class="bg-indigo-600 hover:bg-indigo-700 text-white font-medium py-2 px-6 rounded">
                Home
            </a>
            {% else %}
            <a href="{{ path('app_register') }}" class="bg-indigo-600 hover:bg-indigo-700 text-white font-medium py-2 px-6 rounded">
                Register
            </a>
            <a href="{{ path('app_login') }}" class="bg-white border border-indigo-500 text-indigo-700 hover:bg-indigo-50 font-medium py-2 px-6 rounded">
                Login
            </a>
            {% endif %}
        </div>
    </div>
</div>
{% endblock %}

